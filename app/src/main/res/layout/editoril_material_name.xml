<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editoril_material_name"
    android:layout_width="fill_parent"
    android:layout_height="44dip"
    android:layout_gravity="center_vertical"
    android:layout_marginTop="20dip"
    android:background="@color/title_color" >

    <TextView
        android:id="@+id/tv_editoril_material_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:text="@string/editoril_personal_data_name"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:background="@color/view_color" />

    <TextView
        android:id="@+id/tv_editoril_material_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_editoril_material_name_text"
        android:gravity="right"
        android:paddingRight="25dip"
        android:textSize="16sp" />

</RelativeLayout>