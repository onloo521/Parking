<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editoril_material_gender"
    android:layout_width="fill_parent"
    android:layout_height="44dip"
    android:layout_gravity="center_vertical"
    android:background="@color/title_color" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_editoril_material_gender_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dip"
            android:gravity="center"
            android:text="@string/editoril_personal_data_gender"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radioGroup_editoril_material_gender"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center|right"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radio_editoril_material_gender_Male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:button="@drawable/radio"
                android:gravity="center"
                android:text="常用"
                android:paddingLeft="10dip"
                android:checked="false" />

            <RadioButton
                android:id="@+id/radio_editoril_material_gender_Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:button="@drawable/radio"
                android:gravity="center"
                android:text="不常用"
                android:paddingLeft="10dip"  />
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:background="@color/view_color" />

</RelativeLayout>