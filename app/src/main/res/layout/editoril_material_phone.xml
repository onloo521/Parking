<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editoril_material_phone"
    android:layout_width="fill_parent"
    android:layout_height="44dip"
    android:layout_gravity="center_vertical"
    android:background="@color/title_color" >

    <TextView
        android:id="@+id/tv_editoril_material_phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:text="@string/editoril_personal_data_phone"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/img_editoril_material_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"
        android:src="@drawable/find_goto" />
    <TextView
        android:id="@+id/tv_editoril_material_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:paddingRight="5dip"
        android:layout_toLeftOf="@+id/img_editoril_material_phone"
        android:layout_toRightOf="@+id/tv_editoril_material_phone_text"
        android:textSize="16sp" />

    <View
        android:background="@color/view_color"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="1dip" />

</RelativeLayout>