<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="90dp"
    android:layout_marginTop="1dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp">
        <TextView
            android:id="@+id/parking_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市朝阳区万达停车场"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/parkcar_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/parking_information"
            android:text="周一 03/12 14:35-16:17"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/parking_information"
            />
        <TextView
            android:id="@+id/parking_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/parkcar_time"
            android:layout_alignLeft="@+id/parkcar_time"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:text="停车10小时，每小时3元"
            />
        <TextView
            android:id="@+id/pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$30.00"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:textSize="20sp"
            android:textColor="#FF6633"
            />
        <Button
            android:id="@+id/yijianzhifu"
            android:layout_width="62dp"
            android:layout_height="27dp"
            android:layout_below="@+id/pay_money"
            android:background="@drawable/zhifuanniu_normal"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@+id/pay_money"
            />
    </RelativeLayout>

</LinearLayout>