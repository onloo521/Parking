<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/btn_white_normal"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:gravity="center"
            android:text="车辆查找"
            android:textColor="@color/whilte"
            android:textSize="20sp"/>

        <RelativeLayout
            android:id="@+id/relativeLayout_find_order_back"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/add_car"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/back_whrit" />

        </RelativeLayout>

    </RelativeLayout>

    <include layout="@layout/order_all_car_title"/>
    <hbie.vip.parking.ui.list.PullToRefreshListView
        android:id="@+id/lv_comprehensive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/title_color"
        android:drawSelectorOnTop="false"
        android:scrollbars="none" >
    </hbie.vip.parking.ui.list.PullToRefreshListView>
</LinearLayout>