<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/drive_car_garage_title"
    android:layout_height="102dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/btn_white_normal"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_fangxiangpan"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="驾驶车辆"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:textSize="15sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/view_color"
        android:layout_height="1dp">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/ly_car_info"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/tv_car_current_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="京B8888"
            android:textSize="20sp"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp"
            android:background="@drawable/ic_qiche"
            />
        <TextView
            android:id="@+id/tv_car_current_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="170dp"
            android:text="POLO"
            android:textSize="20sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_arrow_right"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:id="@+id/iv_car_editor"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/view_color"
        android:layout_height="1dp">
    </RelativeLayout>

</LinearLayout>